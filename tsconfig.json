{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["ESNext"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules/**",
    "**/node_modules/**",
    "output/",
    "**/output/**"
  ]
}
